<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/backgroundtop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Create an account to access volunteer community."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#6488f0"
            android:scaleType="center"
            android:src="@drawable/facebook"
            app:tint="@color/white"/>

        <ImageButton
            android:layout_width="171dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#6488f0"
            android:scaleType="center"
            android:src="@drawable/gogglew"
            app:tint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/signupb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#6488f0"
            android:fontFamily="@font/inter_semibold"
            android:text="Continue with Email"
            android:textColor="#fff" />

        <Button
            android:id="@+id/loginb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Already have an account? Log In"
            android:textAlignment="center"
            android:textColor="#0B0B0B"
            />
    </LinearLayout>



</LinearLayout>