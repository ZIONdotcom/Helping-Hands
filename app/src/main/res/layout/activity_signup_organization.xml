<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup2"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/backgroundtop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Sign up"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/material_dynamic_neutral10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter"
            android:text="Sign up as an organization"
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/Email"
            android:hint="Email"
            android:textColorHint="#99121112"
            app:boxStrokeColor="#5B7CD9"
            app:hintTextColor="@color/material_dynamic_neutral10"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Password"
            android:textColorHint="#99121112"
            app:boxStrokeColor="#5B7CD9"
            app:hintTextColor="@color/material_dynamic_neutral10"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#89191818">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordtxtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#000000"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signupbtnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:backgroundTint="#6488f0"
            android:fontFamily="@font/inter_semibold"
            android:text="Sign up"
            android:textColor="#fff" />

        <Button
            android:id="@+id/signupV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Sign up as a volunteer"
            android:textAlignment="center"
            android:textColor="#6488f0"

            />

        <Button
            android:id="@+id/loginb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Already have an account? Log In"
            android:textAlignment="center"
            android:textColor="#0B0B0B"
            />

    </LinearLayout>

</LinearLayout>