                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/education"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.488"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/school"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.491"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.615"
                        app:srcCompat="@drawable/more"
                        app:tint="@color/black" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fourthlayout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/thirdlayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Recommended"
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/viewmore"
            android:text="See more"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/viewmore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/viewmore"
            app:tint="#6488f0" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fifthlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/fourthlayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"
            >

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/borderwhite"
                android:orientation="vertical"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/recoopportunity"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/imagecorner"
                        android:padding="5dp"
                        app:strokeWidth="5dp"
                        app:strokeColor="@color/cardview_shadow_end_color"
                        android:background="@drawable/borderdarkblue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.488"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/redcross" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Involved: Volunteer Information"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:maxHeight="50dp"
                    android:text="Lorem Ipsum, sometimes referred to as 'lipsum', is the placeholder text used in design when creating content. It helps designers plan out where the content will sit, without needing to wait for the content to be written and approved."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/recoopportunity1"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/imagecorner"
                        android:padding="5dp"
                        app:strokeWidth="5dp"
                        app:strokeColor="@color/cardview_shadow_end_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.491"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.615"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/meals" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empowerment Through Volunteering: Get Started"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:maxHeight="50dp"
                    android:text="Lorem Ipsum, sometimes referred to as 'lipsum', is the placeholder text used in design when creating content. It helps designers plan out where the content will sit, without needing to wait for the content to be written and approved."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="30dp"
            >

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/recoopportunity2"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/imagecorner"
                        android:padding="5dp"
                        app:strokeWidth="5dp"
                        app:strokeColor="@color/cardview_shadow_end_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.489"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/habitat" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Making a Difference: Volunteer Info Center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:maxHeight="50dp"
                    android:text="Lorem Ipsum, sometimes referred to as 'lipsum', is the placeholder text used in design when creating content. It helps designers plan out where the content will sit, without needing to wait for the content to be written and approved."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_gravity="center">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/recoopportunity3"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        app:shapeAppearanceOverlay="@style/imagecorner"
                        android:padding="5dp"
                        app:strokeWidth="5dp"
                        app:strokeColor="@color/cardview_shadow_end_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.491"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.615"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/big" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Power of Giving Back: Volunteer Info Hub"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:maxHeight="50dp"
                    android:text="Lorem Ipsum, sometimes referred to as 'lipsum', is the placeholder text used in design when creating content. It helps designers plan out where the content will sit, without needing to wait for the content to be written and approved."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>